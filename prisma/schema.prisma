// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  email    String @id
  password String
  username String
  type     String

  donors          Donors?
  bloodCollectors BloodCollectors?
}

model Donors {
  uid       String @id @default(uuid())
  bloodType String
  gender    String

  userEmail String @unique
  users     Users  @relation(fields: [userEmail], references: [email])

  notification Notification[]
  donate       Donate[]
}

model Notification {
  id          String   @id @default(uuid())
  title       String
  description String
  type        String
  postID      String?
  createdAt   DateTime @default(now())

  donorsUID String
  donors    Donors @relation(fields: [donorsUID], references: [uid])
}

model BloodCollectors {
  uid         String  @id @default(uuid())
  imageURL    String?
  phoneNumber String
  adress      String

  userEmail String @unique
  users     Users  @relation(fields: [userEmail], references: [email])

  posts  Posts[]
  alert  Alert?
  donate Donate[]
}

model Posts {
  id           String   @id @default(uuid())
  bannerURL    String
  linkRedirect String?
  adress       String
  description  String
  createdAt    DateTime @default(now())

  bloodCollectorsID String
  bloodCollectors   BloodCollectors @relation(fields: [bloodCollectorsID], references: [uid])
}

model Alert {
  id          String   @id @default(uuid())
  status      Boolean
  bloodTypes  String[]
  description String

  bloodCollectorsID String          @unique
  bloodCollectors   BloodCollectors @relation(fields: [bloodCollectorsID], references: [uid])
}

model Questions {
  id        String @id @default(uuid())
  questions String
  answare   String
}

model Donate {
  id   String   @id @default(uuid())
  date DateTime

  donorID String
  donors  Donors @relation(fields: [donorID], references: [uid])

  bloodCollectoID String
  bloodCollectors BloodCollectors @relation(fields: [bloodCollectoID], references: [uid])
}
