// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  uid      String @id @default(uuid())
  username String
  email    String
  password String
}

model Users {
  uid       String  @id @default(uuid())
  email     String
  token     String?
  bloodType String
  username  String
  password  String
  gender    String

  notification Notification[]
  donate       Donate[]
}

model Notification {
  id          String   @id @default(uuid())
  title       String
  description String
  type        String
  postID      String?
  createdAt   DateTime @default(now())

  userUID String
  user    Users  @relation(fields: [userUID], references: [uid])
}

model BloodCollectors {
  uid         String  @id @default(uuid())
  username    String
  email       String
  password    String
  imageURL    String?
  phoneNumber String
  adress      String

  posts  Posts[]
  alert  Alert?
  donate Donate[]
}

model Posts {
  id           String   @id @default(uuid())
  bannerURL    String
  linkRedirect String
  adress       String
  description  String
  createdAt    DateTime @default(now())

  bloodCollectorsID String
  bloodCollectors   BloodCollectors @relation(fields: [bloodCollectorsID], references: [uid])
}

model Alert {
  id          String   @id @default(uuid())
  status      Boolean
  bloodTypes  String[]
  description String

  bloodCollectorsID String          @unique
  bloodCollectors   BloodCollectors @relation(fields: [bloodCollectorsID], references: [uid])
}

model Questions {
  id        String @id @default(uuid())
  questions String
  answare   String
}

model Donate {
  id   String   @id @default(uuid())
  date DateTime

  userID String
  users  Users  @relation(fields: [userID], references: [uid])

  bloodCollectoID String
  bloodCollectors BloodCollectors @relation(fields: [bloodCollectoID], references: [uid])
}
